<!doctype html>
<html lang="{{ site.lang }}">
{{> head}}

<body class="no-js post">
  {{> header}}
  <div class="wrapper">
    <article class="post h-entry" itemscope itemtype="https://schema.org/Article">
      {{> microformats-schema}}
      <h1 class="p-name">{{ title }}</h1>
      <p class="p-summary">{{ excerpt }}</p>
      <time class="dt-published" pubdate itemprop="datePublished">{{ datePublished }}</time>
      <div class="e-content">
        {{#if image}}
        <figure>
          <img src="{{ image }}" alt="{{ imageAlt }}">
          <figcaption>{{ imageCap }}</figcaption>
        </figure>
        {{/if}} {{{ contents }}}
      </div>
      <dl>
        <dt>Author:</dt>
        <dd rel="author">{{ site.author }}</dd>
        <dt>Permalink URL:</dt>
        <dd>
          <a class="u-url" href="{{ site.url }}{{ path }}/">{{ site.url }}{{ path }}/</a>
        </dd>
      </dl>
    </article>
  </div>
  {{> footer}}
  <script src="/assets/scripts.js"></script>
  <script>
    if (window.netlifyIdentity) {
      window.netlifyIdentity.on("init", user => {
        if (!user) {
          window.netlifyIdentity.on("login", () => {
            document.location.href = "/admin/";
          });
        }
      });
    }
  </script>
</body>

</html>