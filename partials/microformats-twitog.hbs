<!-- Twitter -->
<meta name="twitter:site" content="@{{ site.twitter }}">
<meta name="twitter:title" content="{{ title }}">
<meta name="twitter:description" content="{{ excerpt }}"> {{#if image}}
<!-- Twitter Summary Card with Large Image data -->
<!-- Aspect ratio 2:1, minimum dimension 300x157 -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:image" content="{{ image }}">
<meta name="twitter:image:alt" content="{{ imageAlt }}"> {{else}}
<!-- Twitter Summary Card -->
<!-- Aspect ratio 1:1, minimum dimension 144x144 -->
<!-- Defaulting to author image -->
<meta name="twitter:card" content="summary">
<meta name="twitter:image" content="{{ site.url }}{{ site.publisherLogo }}">
<meta name="twitter:image:alt" content="{{ site.publisher }} logo"> {{/if}}

<!-- Open Graph data -->
<meta property="fb:app_id" content="{{ site.fbapp_id }}">
<meta property="og:locale" content="{{ site.lang }}">
<meta property="og:site_name" content="{{ site.title }}">
<meta property="og:type" content="article">
<meta property="og:title" content="{{ title }}">
<meta property="og:url" content="{{ site.url }}{{ path }}/">
<meta property="og:description" content="{{ excerpt }}"> {{#if image}}
<!-- If image present -->
<meta property="og:image" content="{{ image }}">
<!-- width & height to ensure shares of new URLs include image -->
<meta property="og:image:width" content="624">
<meta property="og:image:height" content="352"> {{else}}
<!-- If no image, show logo -->
<meta property="og:image" content="{{ site.url }}{{ site.publisherLogo }}">
<meta property="og:image:width" content="{{ site.publisherLogoWidth }}">
<meta property="og:image:height" content="{{ site.publisherLogoHeight }}"> {{/if}}